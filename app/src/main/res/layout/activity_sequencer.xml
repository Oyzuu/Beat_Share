<?xml version="1.0" encoding="utf-8"?>

<!-- TODO don't forget to re-add the custom background -->

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sequencer_rootview"
    android:orientation="vertical"
    tools:context=".controller.activities.SequencerActivity"
    tools:openDrawer="true">

    <!-- TODO AppBarLayout & Toolbar ?-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--  1 to  4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="4dp"
                    android:id="@+id/seq_button_1"
                    android:onClick="activateButton"
                    android:background="@drawable/disabled_sequencer_pad"/>
                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="4dp"
                    android:id="@+id/seq_button_2"
                    android:onClick="activateButton"
                    android:background="@drawable/disabled_sequencer_pad"/>
                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="4dp"
                    android:id="@+id/seq_button_3"
                    android:onClick="activateButton"
                    android:background="@drawable/disabled_sequencer_pad"/>
                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="4dp"
                    android:id="@+id/seq_button_4"
                    android:onClick="activateButton"
                    android:background="@drawable/disabled_sequencer_pad"/>
            </LinearLayout>
            <!--  5 to  8 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="4dp"
                    android:id="@+id/seq_button_5"
                    android:onClick="activateButton"
                    android:background="@drawable/disabled_sequencer_pad"/>
                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="4dp"
                    android:id="@+id/seq_button_6"
                    android:onClick="activateButton"
                    android:background="@drawable/disabled_sequencer_pad"/>
                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="4dp"
                    android:id="@+id/seq_button_7"
                    android:onClick="activateButton"
                    android:background="@drawable/disabled_sequencer_pad"/>
                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="4dp"
                    android:id="@+id/seq_button_8"
                    android:onClick="activateButton"
                    android:background="@drawable/disabled_sequencer_pad"/>
            </LinearLayout>
            <!--  9 to 12 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="4dp"
                    android:id="@+id/seq_button_9"
                    android:onClick="activateButton"
                    android:background="@drawable/disabled_sequencer_pad"/>
                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="4dp"
                    android:id="@+id/seq_button_10"
                    android:onClick="activateButton"
                    android:background="@drawable/disabled_sequencer_pad"/>
                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="4dp"
                    android:id="@+id/seq_button_11"
                    android:onClick="activateButton"
                    android:background="@drawable/disabled_sequencer_pad"/>
                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="4dp"
                    android:id="@+id/seq_button_12"
                    android:onClick="activateButton"
                    android:background="@drawable/disabled_sequencer_pad"/>
            </LinearLayout>
            <!-- 13 to 16 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="4dp"
                    android:id="@+id/seq_button_13"
                    android:onClick="activateButton"
                    android:background="@drawable/disabled_sequencer_pad"/>
                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="4dp"
                    android:id="@+id/seq_button_14"
                    android:onClick="activateButton"
                    android:background="@drawable/disabled_sequencer_pad"/>
                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="4dp"
                    android:id="@+id/seq_button_15"
                    android:onClick="activateButton"
                    android:background="@drawable/disabled_sequencer_pad"/>
                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="4dp"
                    android:id="@+id/seq_button_16"
                    android:onClick="activateButton"
                    android:background="@drawable/disabled_sequencer_pad"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/seq_play_button"
                android:text="@string/play"
                android:layout_margin="4dp"
                android:background="@drawable/plain_button"
                android:onClick="play"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/stop"
                android:layout_margin="4dp"
                android:background="@drawable/plain_button"
                android:onClick="stop"/>
        </LinearLayout>
    </LinearLayout>

    <!-- left drawer -->
    <android.support.design.widget.NavigationView
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:id="@+id/sequencer_drawer"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/sequencer_drawer"
        app:itemTextColor="@color/white"
        app:itemTextAppearance="@android:style/TextAppearance.DeviceDefault.Large">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
